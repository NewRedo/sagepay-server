root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.json]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.pug]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{less,css}]
indent_style = tab
